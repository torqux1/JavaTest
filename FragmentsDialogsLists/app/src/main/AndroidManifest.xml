<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.fragmentsdialogslists">

    <application
        android:name=".MyAplication"
        android:allowBackup="true"

        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:launchMode="singleInstance"
        android:theme="@style/Theme.AppCompat.NoActionBar">



        <meta-data android:name="DATABASE" android:value="game_database.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <activity android:name=".UserActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.lenovo.fragmentsdialogslists" />

        <activity android:name=".MainActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameLayout" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />


            </intent-filter>
        </activity>
            </application>

</manifest>